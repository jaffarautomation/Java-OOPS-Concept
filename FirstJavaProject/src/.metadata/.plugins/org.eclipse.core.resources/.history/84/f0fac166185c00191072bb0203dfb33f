package Lesson2;

public class IncrementAssignment {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
  int x = 10;
  /* 
   
  x=x+1; // to increment by one.
   x++;  // Another method to increase the value by 1.
   System.out.println(x);
   */
  
   //Post incrementation operation
   
   System.out.println(x++);
   // Here x++ mean it will increase the value after the first operation. 
   //
   System.out.println(x);
	}

}
